<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="120dp"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cardView"
  app:cardBackgroundColor="@color/finestWhite"
  app:cardCornerRadius="10dp"
  app:cardElevation=".7dp"
  app:cardMaxElevation="1dp"
  app:contentPadding="10dp"
  app:cardUseCompatPadding="true"
  app:cardPreventCornerOverlap="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/newsInsetImv"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:scaleType="centerCrop"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      />

    <TextView
      android:id="@+id/newsTitleView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      tools:text="Hi pavankumar"
      android:layout_toLeftOf="@id/newsInsetImv"
      android:layout_toStartOf="@id/newsInsetImv"
      android:layout_marginRight="10dp"
      android:layout_marginEnd="10dp"
      android:padding="2dp"/>

    <TextView
      android:id="@+id/description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Caption"
      tools:text="Hi pavankumar"
      android:padding="2dp"
      android:layout_marginRight="10dp"
      android:layout_marginEnd="10dp"
      android:layout_below="@id/newsTitleView"
      android:layout_toLeftOf="@id/newsInsetImv"
      android:layout_toStartOf="@id/newsInsetImv"/>
  </RelativeLayout>
</android.support.v7.widget.CardView>
